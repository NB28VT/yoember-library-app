<h1>Invitations</h1>

<table class="table table-bordered table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th>Email</th>
      <th></th>

    </tr>
  </thead>

  <tbody>
    {{#each model as |invitation| }}
      <tr>
        <th>{{invitation.id}}</th>
        <th>{{invitation.email}}</th>
        <th><button class="btn btn-danger"{{action 'deleteInvitation' invitation}}>Remove</button></th>

      </tr>
    {{/each}}
  </tbody>
</table>